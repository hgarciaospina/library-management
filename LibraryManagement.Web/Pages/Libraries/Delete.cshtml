@page "{id:int}"
@model LibraryManagement.Web.Pages.Libraries.DeleteModel
@{
    ViewData["Title"] = "Delete Library";
}

<h1 class="mb-4">Delete Library</h1>

@if (Model.Library == null)
{
    <div class="alert alert-warning">
        Library not found or already deleted.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <!-- ============================= -->
    <!-- Card container for Library Details -->
    <!-- ============================= -->
    <div class="card shadow-lg rounded-3 p-4 mb-4" style="transform: perspective(800px) rotateX(1deg); background-color: #f8f9fa;">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Library Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Model.Library.Name</dd>

                <dt class="col-sm-3 fw-bold">Address</dt>
                <dd class="col-sm-9">@Model.Library.Address</dd>
            </dl>
        </div>

        <!-- ============================= -->
        <!-- Action Buttons -->
        <!-- ============================= -->
        <div class="card-footer d-flex gap-2 justify-content-end">
            <form method="post">
                <input type="hidden" asp-for="Library.Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Card 3D hover effect */
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: perspective(800px) rotateX(3deg) rotateY(2deg);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }
</style>
