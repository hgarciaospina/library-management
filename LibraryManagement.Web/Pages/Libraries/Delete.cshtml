@page "{id:int}"
@model LibraryManagement.Web.Pages.Libraries.DeleteModel
@{
    ViewData["Title"] = "Delete Library";
}

<h1>Delete Library</h1>

@* Validar si la entidad Library existe *@
@if (Model.Library == null)
{
    <div class="alert alert-warning">
        Library not found or already deleted.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <h3>Are you sure you want to delete this library?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Library.Name</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Library.Address</dd>
        </dl>
    </div>

    <form method="post">
        @* Campo oculto para pasar el Id al handler *@
        <input type="hidden" asp-for="Library.Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
}

@section Scripts {
    @* No se requieren scripts adicionales, pero se mantiene la sección por consistencia *@
}
