@page "{id:int}"
@model LibraryManagement.Web.Pages.Libraries.DetailsModel
@{
    ViewData["Title"] = "Library Details";
}

<h1>Library Details</h1>

@if (Model.Library == null)
{
    <div class="alert alert-warning">
        Library not found.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Library.Id</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Library.Name</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Library.Address</dd>
        </dl>
    </div>

    <div>
        <a asp-page="Edit" asp-route-id="@Model.Library.Id" class="btn btn-primary">Edit</a>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </div>
}
