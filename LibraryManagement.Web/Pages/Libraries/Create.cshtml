@page
@model LibraryManagement.Web.Pages.Libraries.CreateModel
@{
    ViewData["Title"] = "Add Library";
}

<h1>Add Library</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Library.Name"></label>
        <input asp-for="Library.Name" class="form-control" />
        <span asp-validation-for="Library.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Library.Address"></label>
        <input asp-for="Library.Address" class="form-control" />
        <span asp-validation-for="Library.Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
