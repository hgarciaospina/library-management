@page "{id:int}"
@model LibraryManagement.Web.Pages.Loans.DeleteModel
@{
    ViewData["Title"] = "Delete Loan";
}

<h2>Delete Loan</h2>

<h4>Are you sure you want to delete this loan?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Loan.BookTitle</dd>

        <dt class="col-sm-2">Member</dt>
        <dd class="col-sm-10">@Model.Loan.MemberFullName</dd>

        <dt class="col-sm-2">Loan Date</dt>
        <dd class="col-sm-10">@Model.Loan.LoanDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.Loan.DueDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Return Date</dt>
        <dd class="col-sm-10">@Model.Loan.ReturnDate?.ToShortDateString()</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
