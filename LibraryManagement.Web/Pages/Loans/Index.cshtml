@page
@model LibraryManagement.Web.Pages.Loans.IndexModel
@{
    ViewData["Title"] = "Loans";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <!-- Page title from ViewData -->
    <h2>@ViewData["Title"]</h2>

    @* Display selected library name on the right if LibraryId is set *@
    @if (Model.LibraryId.HasValue && Model.Loans.Any())
    {
        <span class="badge bg-primary fs-5 py-2 px-3">
            @Model.Loans.First().LibraryName
        </span>
    }
</div>

@* Updated "Create New Loan" button to pass libraryId via route *@
@if (Model.LibraryId.HasValue)
{
    <a asp-page="Create" asp-route-libraryId="@Model.LibraryId.Value" class="btn btn-success mb-3">
        Create New Loan
    </a>
}
else
{
    @* Fallback if no library is selected; allows user to pick a library in Create page *@
    <a asp-page="Create" class="btn btn-success mb-3">Create New Loan</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Book</th>
            <th>Member</th>
            <th>Loan Date</th>
            <th>Due Date</th>
            <th>Return Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td>@loan.BookTitle</td>  @* Filled from LoanDto via AutoMapper *@
                <td>@loan.MemberFullName</td>  @* Filled from LoanDto via AutoMapper *@
                <td>@loan.LoanDate.ToShortDateString()</td>
                <td>@loan.DueDate.ToShortDateString()</td>
                <td>@loan.ReturnDate?.ToShortDateString()</td>
                <td>
                    <a asp-page="Details" asp-route-id="@loan.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-page="Edit" asp-route-id="@loan.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@loan.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
