<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('/images/library-background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
        .navbar {
            background-color: rgba(0,0,0,0.7);
        }
        .navbar a {
            color: white !important;
        }
        .content {
            background-color: rgba(255,255,255,0.9);
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Library Management</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Books/Index">Books</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Members/Index">Members</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Loans/Index">Loans</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Libraries/Index">Libraries</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container content">
        @RenderBody()
    </div>
</body>
</html>
