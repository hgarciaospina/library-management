@page "{id:int}"
@model LibraryManagement.Web.Pages.Members.DeleteModel
@{
    ViewData["Title"] = "Delete Member";
}

<h2>Delete Member</h2>

<h4>Are you sure you want to delete this member?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.Member.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.Member.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Member.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Member.PhoneNumber</dd>
    </dl>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
