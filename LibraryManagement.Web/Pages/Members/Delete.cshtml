@page "{id:int}"
@model LibraryManagement.Web.Pages.Members.DeleteModel
@{
    ViewData["Title"] = "Delete Member";
}

<h1 class="mb-4">Delete Member</h1>

@if (Model.Member == null)
{
    <div class="alert alert-warning">
        Member not found or already deleted.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <!-- ============================= -->
    <!-- Member Details Card -->
    <!-- ============================= -->
    <div class="card shadow-lg rounded-3 mb-4" style="background-color: #f8f9fa; transform: perspective(800px) rotateX(1deg);">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Member Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.Member.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.Member.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Member.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Member.PhoneNumber</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <!-- Trigger modal -->
            <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Delete
            </button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>

    <!-- ============================= -->
    <!-- Delete Confirmation Modal -->
    <!-- ============================= -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to permanently delete this member?
                </div>
                <div class="modal-footer">
                    <form method="post">
                        <input type="hidden" asp-for="Member.Id" />
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Card 3D hover effect */
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: perspective(800px) rotateX(3deg) rotateY(2deg);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }
</style>
