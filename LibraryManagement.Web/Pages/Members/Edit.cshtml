@page "{id:int}"
@model LibraryManagement.Web.Pages.Members.EditModel
@{
    ViewData["Title"] = "Edit Member";
}

<h1 class="mb-4">Edit Member</h1>

@if (Model.Member == null)
{
    <div class="alert alert-warning">
        Member not found or it may have been deleted.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <!-- ============================= -->
    <!-- Card container for 3D effect -->
    <!-- ============================= -->
    <div style="perspective: 1000px; margin-top:20px;">
        <div class="card shadow-lg p-4 mb-4 border-0" style="border-radius: 12px; background-color: #f8f9fa; cursor: pointer;">
            <form method="post">
                <input type="hidden" asp-for="Member.Id" />

                <div class="form-group mb-3">
                    <label asp-for="Member.FirstName" class="form-label fw-bold"></label>
                    <input asp-for="Member.FirstName" class="form-control" />
                    <span asp-validation-for="Member.FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.LastName" class="form-label fw-bold"></label>
                    <input asp-for="Member.LastName" class="form-control" />
                    <span asp-validation-for="Member.LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.Email" class="form-label fw-bold"></label>
                    <input asp-for="Member.Email" class="form-control" />
                    <span asp-validation-for="Member.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="Member.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Member.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Member.LibraryId" class="form-label fw-bold"></label>
                    <select asp-for="Member.LibraryId" asp-items="Model.LibraryList" class="form-select">
                        <option value="">-- Select a Library --</option>
                    </select>
                    <span asp-validation-for="Member.LibraryId" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary flex-grow-1">Save</button>
                    <a asp-page="Index" class="btn btn-secondary flex-grow-1">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}

<style>
    /* Card 3D hover effect */
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .card:hover {
            transform: rotateX(3deg) rotateY(2deg);
            box-shadow: 0 20px 40px rgba(0,0,0,0.25);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
