@page "{id:int}"
@model LibraryManagement.Web.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book</h1>

@if (Model.Book == null)
{
    <div class="alert alert-warning">
        Book not found or it may have been deleted.
    </div>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />

        <div class="mb-3">
            <label asp-for="Book.Title" class="form-label"></label>
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Book.Author" class="form-label"></label>
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Book.ISBN" class="form-label"></label>
            <input asp-for="Book.ISBN" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>

        <!-- Slider for Publication Year -->
        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <label for="yearSlider">Publication Year</label>
                <span id="yearValue" class="fw-bold">@Model.Book.PublicationYear</span>
            </div>
            <input asp-for="Book.PublicationYear"
                   type="range"
                   min="1500"
                   max="@DateTime.Now.Year"
                   value="@Model.Book.PublicationYear"
                   class="form-range"
                   id="yearSlider"
                   oninput="document.getElementById('yearValue').textContent = this.value" />
            <span asp-validation-for="Book.PublicationYear" class="text-danger"></span>
        </div>

        <!-- Library dropdown -->
        <div class="mb-3">
            <label asp-for="Book.LibraryId" class="form-label"></label>
            <select asp-for="Book.LibraryId" class="form-control" asp-items="Model.LibraryList">
                <option value="">-- Select Library --</option>
            </select>
            <span asp-validation-for="Book.LibraryId" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Book.IsAvailable" class="form-check-input" />
            <label asp-for="Book.IsAvailable" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slider = document.getElementById('yearSlider');
            var yearValue = document.getElementById('yearValue');
            yearValue.textContent = slider.value;
        });
    </script>
}
