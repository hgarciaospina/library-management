@page "{id:int}"
@model LibraryManagement.Web.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>

<!-- ============================= -->
<!-- Book Details Card -->
<!-- ============================= -->
<div class="card mb-3">
    <div class="card-header">
        Book Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Book.Title</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Book.Author</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.Book.ISBN</dd>

            <dt class="col-sm-3">Publication Year</dt>
            <dd class="col-sm-9">@Model.Book.PublicationYear</dd>

            <dt class="col-sm-3">Library</dt>
            <dd class="col-sm-9">@Model.Book.LibraryName</dd>
        </dl>
    </div>
</div>

<!-- ============================= -->
<!-- Delete Confirmation Modal Trigger -->
<!-- ============================= -->
<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
    Delete
</button>
<a asp-page="Index" class="btn btn-secondary">Cancel</a>

<!-- ============================= -->
<!-- Delete Confirmation Modal -->
<!-- ============================= -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete this book?
            </div>
            <div class="modal-footer">
                <form method="post">
                    <input type="hidden" asp-for="Book.Id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Required scripts for Bootstrap modal -->
    <partial name="_ValidationScriptsPartial" />
}
