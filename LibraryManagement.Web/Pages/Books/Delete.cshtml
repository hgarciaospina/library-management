@page "{id:int}"
@model LibraryManagement.Web.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1 class="mb-4">Delete Book</h1>

<!-- ============================= -->
<!-- Book Details Card -->
<!-- ============================= -->
<div class="card shadow-lg rounded-3 p-4 mb-4" style="transform: perspective(800px) rotateX(1deg);">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">Book Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Book.Title</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Book.Author</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.Book.ISBN</dd>

            <dt class="col-sm-3">Publication Year</dt>
            <dd class="col-sm-9">@Model.Book.PublicationYear</dd>

            <dt class="col-sm-3">Library</dt>
            <dd class="col-sm-9">@Model.Book.LibraryName</dd>
        </dl>
    </div>

    <!-- ============================= -->
    <!-- Action Buttons -->
    <!-- ============================= -->
    <div class="card-footer text-end">
        <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Delete
        </button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>

<!-- ============================= -->
<!-- Delete Confirmation Modal -->
<!-- ============================= -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this book?
            </div>
            <div class="modal-footer">
                <form method="post">
                    <input type="hidden" asp-for="Book.Id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- ============================= -->
<!-- Error Modal if the book has active loans -->
<!-- ============================= -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="errorModalLabel">Error</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Model.ErrorMessage
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="window.location.href='@Url.Page("Index")'">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Show the error modal using Bootstrap 5 JS
        document.addEventListener('DOMContentLoaded', function () {
            var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            errorModal.show();
        });
    </script>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Card 3D hover effect */
    .card {
        transition: transform 0.3s;
    }

        .card:hover {
            transform: perspective(800px) rotateX(3deg) rotateY(2deg);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }
</style>
