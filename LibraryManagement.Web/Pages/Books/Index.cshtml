@page
@model LibraryManagement.Web.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h2>Books</h2>

<a asp-page="Create" class="btn btn-success mb-3">Create New Book</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publication Year</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.PublicationYear</td>
                <td>@(book.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a asp-page="Details" asp-route-id="@book.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
