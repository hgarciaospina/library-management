@page "{id:int}"
@model LibraryManagement.Web.Pages.Books.DetailsModel
@{
    ViewData["Title"] = "Book Details";
}

<h2>Book Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Book.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Book.Author</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.Book.ISBN</dd>

        <dt class="col-sm-2">Publication Year</dt>
        <dd class="col-sm-10">@Model.Book.PublicationYear</dd>

        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@Model.Book.IsAvailable</dd>
    </dl>
</div>

<a asp-page="Index" class="btn btn-secondary">Back to List</a>
