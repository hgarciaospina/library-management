@page
@model LibraryManagement.Web.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Create Book";
}

<h2 class="mb-4">Create New Book</h2>

<form method="post">
    <div class="row g-3">
        <!-- ISBN -->
        <div class="col-md-6">
            <label asp-for="Book.ISBN" class="form-label"></label>
            <input asp-for="Book.ISBN" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>

        <!-- Title -->
        <div class="col-md-6">
            <label asp-for="Book.Title" class="form-label"></label>
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>

        <!-- Author -->
        <div class="col-md-6">
            <label asp-for="Book.Author" class="form-label"></label>
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        <!-- Publication Year Slider -->
        <div class="col-md-6">
            <div class="d-flex justify-content-between">
                <label for="yearSlider" class="form-label">Publication Year</label>
                <span id="yearValue" class="fw-bold">@Model.Book.PublicationYear</span>
            </div>
            <input asp-for="Book.PublicationYear"
                   type="range"
                   min="1500"
                   max="@DateTime.Now.Year"
                   value="@Model.Book.PublicationYear"
                   class="form-range"
                   id="yearSlider"
                   oninput="document.getElementById('yearValue').textContent = this.value" />
            <span asp-validation-for="Book.PublicationYear" class="text-danger"></span>
        </div>

        <!-- Library Select -->
        <div class="col-md-6">
            <label asp-for="Book.LibraryId" class="form-label">Library</label>
            <select asp-for="Book.LibraryId" class="form-select" asp-items="Model.LibraryList">
                <option value="">-- Select Library --</option>
            </select>
            <span asp-validation-for="Book.LibraryId" class="text-danger"></span>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4">
        <button type="submit" class="btn btn-primary me-2">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var slider = document.getElementById('yearSlider');
            var yearValue = document.getElementById('yearValue');
            yearValue.textContent = slider.value;
        });
    </script>
}
